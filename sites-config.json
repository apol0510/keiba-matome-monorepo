            { "name": "scrape-netkeiba", "script": "scripts/scrape-netkeiba-news.cjs", "env": { "ARTICLE_COUNT": "3" } },
            { "name": "generate-seo", "script": "../shared/scripts/generate-seo-for-new-articles.cjs", "args": ["--project=keiba-matome"] },
            { "name": "generate-comments", "script": "../shared/scripts/generate-2ch-comments.cjs" },
            { "name": "add-comments", "script": "scripts/add-comments-to-existing.cjs" },
            { "name": "post-to-x", "script": "scripts/post-to-x.cjs" }
          ]
        }
      }
    },
    "chihou-keiba-matome": {
      "name": "地方競馬",
      "displayName": "地方競馬ニュースまとめ（2ch風）",
      "airtableBaseId": "appt25zmKxQDiSCwh",
