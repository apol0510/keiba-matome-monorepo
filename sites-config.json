        "daily": {
          "schedule": ["0 21 * * *", "0 3 * * *", "0 9 * * *"],
          "scripts": [
            { "name": "scrape-netkeiba", "script": "scripts/scrape-netkeiba-chihou.cjs", "env": { "ARTICLE_COUNT": "5" } },
            { "name": "scrape-yahoo", "script": "scripts/scrape-yahoo-chihou.cjs", "env": { "ARTICLE_COUNT": "4" } },
            { "name": "generate-seo", "script": "../shared/scripts/generate-seo-for-new-articles.cjs", "args": ["--project=chihou-keiba-matome"] },
            { "name": "generate-comments", "script": "../shared/scripts/generate-2ch-comments.cjs" },
            { "name": "add-comments", "script": "scripts/add-comments-to-published.cjs" },
            { "name": "post-to-x", "script": "scripts/post-to-x.cjs" }
