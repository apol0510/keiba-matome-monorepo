      "siteUrl": "https://yosou.keiba-matome.jp",
      "port": 4325,
      "xAccountHandle": "@yosou_keiba_jp",
      "xCredentialKey": "YOSOU_X",
      "netlifyBuildHook": "YOSOU_KEIBA_NETLIFY_BUILD_HOOK",
      "workflows": {
        "nankan-daily": {
          "schedule": ["0 21 * * 0-4", "0 3 * * 1-5", "0 9 * * 1-5"],
          "scripts": [
            { "name": "scrape-nankan", "script": "scripts/scrape-nankan-daily.cjs" },
            { "name": "generate-seo", "script": "../shared/scripts/generate-seo-for-new-articles.cjs", "args": ["--project=yosou-keiba-matome"] },
            { "name": "generate-comments", "script": "scripts/generate-2ch-comments.cjs" },
            { "name": "post-to-x", "script": "scripts/post-to-x.cjs" }
          ]
        },
        "chuou-weekly": {
          "schedule": ["0 9 * * 2", "0 9 * * 5"],
