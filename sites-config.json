      "port": 4323,
      "xAccountHandle": "@keiba_matome_jp",
      "xCredentialKey": "KEIBA_MATOME_X",
      "netlifyBuildHook": "KEIBA_MATOME_NETLIFY_BUILD_HOOK",
      "workflows": {
        "daily": {
          "schedule": ["0 21 * * *", "0 3 * * *", "0 9 * * *"],
